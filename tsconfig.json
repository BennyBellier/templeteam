{
  "compilerOptions": {
    /* Base Options: */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,

    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "checkJs": true,

    /* Bundled projects */
    "lib": ["dom", "dom.iterable", "ES2022"],
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "Bundler", // "node",
    "jsx": "preserve",
    "plugins": [{ "name": "next" }],
    "incremental": true,

    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "#app/*": ["./app/*"],
      "#public/*": ["./public/*"],
      "#emails/*": ["./emails"]
    },
    "typeRoots": ["types"]
  },
  "include": [
    ".eslintrc.cjs",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.js",
    ".next/types/**/*.ts",
    "src/env.mjs",
    "prisma/*.ts",
    "app/**/*.tsx",
    "app/association/**/*.tsx",
    "src/**/*.tsx",
    "src/**/*.ts"
, "src/components/ui/stepper.deactivated", "src/components/ui/resizable.deactivated"  ],
  "exclude": ["node_modules"]
}
